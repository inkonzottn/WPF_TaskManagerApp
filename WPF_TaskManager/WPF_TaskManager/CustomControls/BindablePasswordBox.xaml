<UserControl x:Class="WPF_TaskManager.CustomControls.BindablePasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_TaskManager.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800">
    
    
    
    <PasswordBox x:Name="txtPassword"
                                 Foreground="White"
                                 FontSize="18"
                                 FontFamily="Montserrat"
                                 FontWeight="Medium"
                                 BorderBrush="LightGray"
                                 CaretBrush="DarkGray"
                                 BorderThickness="0,0,2,1"
                                 VerticalContentAlignment="Center"
                                 Padding="20,0,0,0">
        <PasswordBox.Background>
            <ImageBrush ImageSource="/WPF_TaskManager;component/Images/key.png"
                                        Stretch="None"
                                        AlignmentX="Left"/>
        </PasswordBox.Background>
    </PasswordBox>
</UserControl>
